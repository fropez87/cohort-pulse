{
  "version": 2,
  "builds": [
    { "src": "api/index.py", "use": "@vercel/python" },
    { "src": "frontend/package.json", "use": "@vercel/static-build", "config": { "distDir": "dist" } }
  ],
  "routes": [
    { "src": "/api/health", "dest": "api/index.py" },
    { "src": "/api/analyze", "dest": "api/index.py" },
    { "src": "/api/upload", "dest": "api/index.py" },
    { "src": "/api/cohort-matrix", "dest": "api/index.py" },
    { "src": "/(.*)", "dest": "frontend/$1" }
  ]
}
