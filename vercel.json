{
  "buildCommand": "cd frontend && npm install && npm run build",
  "installCommand": "echo 'skip root install'",
  "outputDirectory": "frontend/dist",
  "functions": {
    "api/index.py": {
      "runtime": "python3.12"
    }
  },
  "routes": [
    { "src": "/api/health", "dest": "/api/index.py" },
    { "src": "/api/analyze", "dest": "/api/index.py" },
    { "src": "/api/upload", "dest": "/api/index.py" },
    { "src": "/api/cohort-matrix", "dest": "/api/index.py" },
    { "src": "/(.*)", "dest": "/$1" }
  ]
}
