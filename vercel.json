{
  "buildCommand": "cd frontend && npm install && npm run build",
  "outputDirectory": "frontend/dist",
  "framework": "vite",
  "functions": {
    "api/*.py": {
      "runtime": "python3.9"
    }
  },
  "rewrites": [
    { "source": "/api/analyze", "destination": "/api/analyze.py" },
    { "source": "/api/upload", "destination": "/api/upload.py" },
    { "source": "/api/cohort-matrix", "destination": "/api/cohort-matrix.py" },
    { "source": "/api/health", "destination": "/api/health.py" },
    { "source": "/api/export", "destination": "/api/export.py" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
